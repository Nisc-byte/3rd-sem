#include <stdio.h>
#include <math.h>

double f(double x) {
    return x*x*x + x*x - 3*x - 1;
}

int main() {
    double a, b, c;
    int iteration = 0;

    a = 2;
    b = 3;

   
    if (f(a) * f(b) <= 0) {
        printf("Invalid interval. f(a) and f(b) must have opposite signs.\n");
        return 1;
    }

    printf("Bisection method for f(x) = x^3 + x^2 - 3x - 1\n");
    printf("Initial interval: [%.3f, %.3f]\n\n", a, b);

    while ((b - a) >= 0.001) {
        iteration++;
        c = (a + b) / 2.0;

        printf("Iteration %d: a=%.5f, b=%.5f, c=%.5f, f(c)=%.5f\n",
               iteration, a, b, c, f(c));

        if (fabs(f(c)) < 0.001)
            break;

        
        if (f(a) * f(c) < 0)
            b = c;
        else
            a = c;
    }

    printf("\nApproximate root after %d iterations: %.5f\n", iteration, c);

    return 0;
}
